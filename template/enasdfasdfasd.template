<%
    :sql =  "SELECT xAxis,yAxis FROM _test_echart"
    :x = changeRecordSet(:sql)
    debugMsg("================="#:x)
    ///将XAxis ,YAxis 加入数组
    If recordCount()>0
        :i=0
        Repeat
            :x_data[:i] = xAxis
            :y_data[:i] = yAxis
            :i = :i + 1
        EndRepeat
    EndIf

%>

<script type="text/javascript">
var dom = document.getElementById("container");
var myChart = echarts.init(dom);
var app = {};
var x=[1,2,3,4,5,6,7]
option = null;
option = {
    xAxis: {
        type: 'value',
        data: <%=:x_data%>
    },
    yAxis: {
        type: 'value'
    },
    series: [{
        data: <%=:y_data%>,
        type: 'line'
    }]
};
;
if (option && typeof option === "object") {
    myChart.setOption(option, true);
}
       </script></body>
